{
	"name": "retiresimple.frontend",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=16.0.0",
		"pnpm": ">=6.0.0",
		"npm": ">=7.0.0"
	},
	"dependencies": {
		"@emotion/react": "^11.10.6",
		"@emotion/styled": "^11.10.6",
		"@hookform/resolvers": "^2.9.11",
		"@mui/material": "^5.11.13",
		"@mui/system": "^5.11.13",
		"@mui/x-date-pickers": "^5.0.20",
		"dayjs": "^1.11.7",
		"prop-types": "^15.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.43.7",
		"react-router-dom": "^6.9.0",
		"recharts": "^2.5.0",
		"yup": "^1.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.21.3",
		"@babel/plugin-syntax-flow": "^7.18.6",
		"@babel/plugin-transform-react-jsx": "^7.21.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.3",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@vitejs/plugin-react": "^3.1.0",
		"eslint": "^8.36.0",
		"eslint-config-react-app": "^7.0.1",
		"jest-editor-support": "^30.3.1",
		"typescript": "^5",
		"vite": "^4.2.0",
		"vite-tsconfig-paths": "^4.0.7"
	},
	"scripts": {
		"start": "vite",
		"build": "tsc && vite build",
		"test": "jest"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"react-app",
			"react-app/jest"
		],
		"rules": {
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"brace-style": [
				"error",
				"1tbs",
				{
					"allowSingleLine": true
				}
			],
			"no-tabs": "off",
			"react/jsx-indent": [
				"error",
				"tab"
			],
			"react/jsx-indent-props": [
				"error",
				"tab"
			],
			"jsx-quotes": [
				"error",
				"prefer-single"
			],
			"react/jsx-tag-spacing": [
				"error",
				{
					"closingSlash": "never",
					"beforeSelfClosing": "always",
					"afterOpening": "never",
					"beforeClosing": "never"
				}
			],
			"max-len": [
				"warn",
				{
					"code": 100,
					"ignoreComments": true,
					"ignoreStrings": true,
					"ignoreTemplateLiterals": true,
					"ignoreRegExpLiterals": true,
					"ignorePattern": "^import\\s.+\\sfrom\\s.+;$",
					"ignoreUrls": true
				}
			]
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}